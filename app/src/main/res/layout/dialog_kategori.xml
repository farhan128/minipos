<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh_recycler_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/background_dialog">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progres_bar"
            android:layout_centerInParent="true"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_marginLeft="@dimen/margin_14"
            android:layout_marginRight="@dimen/margin_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical" />
        <Button
            android:layout_below="@+id/recycler_view"
            android:text="TAMBAH"
            android:background="@drawable/background_button"
            android:layout_width="match_parent"
            android:textColor="@android:color/white"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_32"
            android:layout_marginLeft="@dimen/margin_32"
            android:layout_marginBottom="@dimen/margin_20"
            android:textSize="@dimen/margin_20"
            android:layout_height="wrap_content"
            android:id="@+id/btn_tambah_dialog_kategori"/>


    </RelativeLayout>
</LinearLayout>


